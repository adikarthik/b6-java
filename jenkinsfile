pipeline{
    agent any
    tools {
  maven '1m'
}
    stages {
  stage('clone') {
    steps {
        git branch: 'main', url: 'https://github.com/meghsmb/b6-java.git'
    }
  }
stage('clean') {
 steps {
         sh 'mvn clean'
        }
  }
  stage('build') {
      steps {
          sh 'mvn install'
      }
  }
  stage('test') {
      steps {
          sh 'mvn test'
      }
  }
  stage('deploy') {
  steps {
    sh 'chmod 777 scripts/deliver.sh'
   sh 'scripts/deliver.sh'
  }
}

    }    
    }
